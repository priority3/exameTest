# Web (Next.js)
# - API_BASE_URL: for Server Components (Node-side fetch)
# - NEXT_PUBLIC_API_BASE_URL: for Client Components (browser fetch)
#
# In production Docker (same-origin /api reverse proxy), you can omit
# NEXT_PUBLIC_API_BASE_URL and the browser will use "/api" automatically.
API_BASE_URL=http://localhost:4000
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000

# API
API_PORT=4000
NODE_ENV=development

# Infra
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/exametest
REDIS_URL=redis://localhost:6379

# LLM (optional until you wire generation/grading)
OPENAI_API_KEY=
# For OpenAI-compatible providers (e.g. OpenRouter/DeepSeek/self-hosted gateways).
# Must include the `/v1` path if the provider expects it, e.g. `https://openrouter.ai/api/v1`.
OPENAI_BASE_URL=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-5.2
